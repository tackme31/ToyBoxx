<ui:FluentWindow
    x:Class="ToyBoxx.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ToyBoxx"
    xmlns:ffme="clr-namespace:Unosquare.FFME;assembly=ffme.win"
    xmlns:controls="clr-namespace:ToyBoxx.Controls"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    mc:Ignorable="d"
    Title="{Binding WindowTitle}"
    d:DataContext="{d:DesignInstance local:MainWindow, IsDesignTimeCreatable=False}"
    WindowStartupLocation="Manual" MinHeight="640" Height="0" MinWidth="640" Width="0"
    AllowDrop="True"
    PreviewMouseWheel="FluentWindow_PreviewMouseWheel"
    MouseLeftButtonDown="FluentWindow_MouseLeftButtonDown"
    MouseLeftButtonUp="FluentWindow_MouseLeftButtonUp"
    MouseMove="FluentWindow_MouseMove"
    MouseDown="FluentWindow_MouseDown">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding OpenFileCommand}"
                                   PassEventArgsToCommand="True"/>
        </i:EventTrigger>
        <i:EventTrigger EventName="PreviewDrop">
            <i:InvokeCommandAction Command="{Binding OpenFileCommand}"
                                   PassEventArgsToCommand="True"/>
        </i:EventTrigger>
        <i:EventTrigger EventName="MouseDoubleClick">
            <i:InvokeCommandAction Command="{Binding ToggleFullScreen}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <ui:FluentWindow.Resources>
        <Storyboard x:Key="ShowControlOpacity" Storyboard.TargetProperty="(UIElement.Opacity)">
            <DoubleAnimation To="1" Duration="0:0:0.100" FillBehavior="HoldEnd" />
        </Storyboard>
        <Storyboard x:Key="HideControlOpacity" Storyboard.TargetProperty="(UIElement.Opacity)">
            <DoubleAnimation To="0" Duration="0:0:0.300" FillBehavior="HoldEnd" />
        </Storyboard>
    </ui:FluentWindow.Resources>

    <Grid Name="Player">
        <Grid x:Name="ClipGrid" ClipToBounds="True">
            <ffme:MediaElement
                Name="Media"
                LoadedBehavior="Play"
                IsDesignPreviewEnabled="True"
                Stretch="Uniform">
                <ffme:MediaElement.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="scaleTransform"
                                        ScaleX="{Binding Scale}"
                                        ScaleY="{Binding Scale}"
                                        CenterX="{Binding ScaleCenterX}"
                                        CenterY="{Binding ScaleCenterY}"/>
                        <RotateTransform x:Name="rotateTransform"
                                         Angle="{Binding Angle}"
                                         CenterX="{Binding ScaleCenterX}"
                                         CenterY="{Binding ScaleCenterY}"/>
                        <TranslateTransform x:Name="translateTransform"
                                            X="{Binding TransformX}"
                                            Y="{Binding TransformY}" />
                    </TransformGroup>
                </ffme:MediaElement.RenderTransform>
            </ffme:MediaElement>
        </Grid>

        <DockPanel x:Name="LayoutPanel"
                   LastChildFill="False"
                   PreviewMouseDown="LayoutPanel_PreviewMouseDown">
            <controls:ControllerPanelControl
                x:Name="ControllerPanel"
                DockPanel.Dock="Bottom"
                Visibility="{Binding IsApplicationLoaded, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </DockPanel>

        <ui:TitleBar
            x:Name="TitleBar"
            Title="{Binding WindowTitle}"
            Margin="4"
            CloseWindowByDoubleClickOnIcon="True" Cursor="">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="/256x256.ico" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <ui:SnackbarPresenter x:Name="SnackbarPresenter" />
    </Grid>
</ui:FluentWindow>
