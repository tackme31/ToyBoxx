<ui:FluentWindow
    x:Class="ToyBoxx.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ToyBoxx"
    xmlns:ffme="clr-namespace:Unosquare.FFME;assembly=ffme.win"
    xmlns:controls="clr-namespace:ToyBoxx.Controls"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable="d"
    DataContext="{StaticResource ViewModel}"
    Title="{Binding WindowTitle}"
    WindowStartupLocation="Manual" MinHeight="640" Height="0" MinWidth="640" Width="0"
    Background="Black"
    AllowDrop="True"
    Drop="Window_Drop"
    PreviewMouseWheel="FluentWindow_PreviewMouseWheel"
    MouseLeftButtonDown="FluentWindow_MouseLeftButtonDown"
    MouseLeftButtonUp="FluentWindow_MouseLeftButtonUp"
    MouseMove="FluentWindow_MouseMove">
    <ui:FluentWindow.Resources>
        <Storyboard x:Key="ShowControlOpacity" Storyboard.TargetProperty="(UIElement.Opacity)">
            <DoubleAnimation To="1" Duration="0:0:0.100" FillBehavior="HoldEnd" />
        </Storyboard>
        <Storyboard x:Key="HideControlOpacity" Storyboard.TargetProperty="(UIElement.Opacity)">
            <DoubleAnimation To="0" Duration="0:0:0.300" FillBehavior="HoldEnd" />
        </Storyboard>
    </ui:FluentWindow.Resources>

    <Grid Name="Player">
        <Grid x:Name="ClipGrid" ClipToBounds="True">
            <ffme:MediaElement
                Name="Media"
                Background="Black"
                LoadedBehavior="Play"
                IsDesignPreviewEnabled="True"
                MouseDoubleClick="Media_MouseDoubleClick"
                Stretch="Uniform">
                <ffme:MediaElement.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1" CenterX="0" CenterY="0"/>
                        <TranslateTransform x:Name="translateTransform" X="0" Y="0" />
                    </TransformGroup>
                </ffme:MediaElement.RenderTransform>
            </ffme:MediaElement>
        </Grid>

        <DockPanel x:Name="LayoutPanel" LastChildFill="False">
            <controls:ControllerPanelControl
                x:Name="ControllerPanel"
                DockPanel.Dock="Bottom"
                Visibility="{Binding IsApplicationLoaded, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </DockPanel>

        <ui:TitleBar
            x:Name="TitleBar"
            Title="{Binding WindowTitle}"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True">
            <ui:TitleBar.Icon>
                <ui:SymbolIcon Symbol="PlayCircle16"/>
            </ui:TitleBar.Icon>
        </ui:TitleBar>
    </Grid>
</ui:FluentWindow>
