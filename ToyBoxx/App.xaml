<Application x:Class="ToyBoxx.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ToyBoxx.Foundation"
             xmlns:vm="clr-namespace:ToyBoxx.ViewModels"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <local:TimeSpanToSecondsConverter x:Key="TimeSpanToSecondsConverter" />
            <local:NullableTimeSpanToSecondsConverter x:Key="NullableTimeSpanToSecondsConverter" />
            <local:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <local:SpeedRatioConverter x:Key="SpeedRatioConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
